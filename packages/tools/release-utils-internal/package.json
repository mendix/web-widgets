{
  "name": "@mendix/release-utils-internal",
  "version": "1.0.0",
  "description": "Set of helpers for release processes",
  "private": true,
  "main": "index.ts",
  "types": "index.ts",
  "bin": {
    "rui-release-widget-gh": "bin/rui-release-widget-gh.ts",
    "rui-publish-marketplace": "bin/rui-publish-marketplace.ts",
    "rui-verify-package-format": "bin/rui-verify-package-format.ts"
  },
  "scripts": {
    "start": "tsc --watch",
    "precompile": "npm run compile:parser:widget && npm run compile:parser:module",
    "compile": "tsc",
    "lint": "eslint --config ../../../.eslintrc.js --ext .jsx,.js,.ts,.tsx src/",
    "compile:parser:widget": "peggy -o ./src/changelog-parser/parser/module/module.js ./src/changelog-parser/parser/module/module.pegjs",
    "compile:parser:module": "peggy -o ./src/changelog-parser/parser/widget/widget.js ./src/changelog-parser/parser/widget/widget.pegjs",
    "prepare": "npm run compile"
  },
  "devDependencies": {
    "@types/node-fetch": "2.6.1",
    "eslint": "^7.20.0",
    "execa": "^5.1.1",
    "fast-xml-parser": "^4.0.1",
    "node-fetch": "^2.6.1",
    "peggy": "^1.2.0",
    "rimraf": "^2.7.1",
    "shelljs": "^0.8.4",
    "ts-node": "^9.0.0",
    "typescript": "4.5.4",
    "zod": "^3.11.6"
  },
  "files": [
    "shell.ts",
    "steps.ts",
    "utils.ts",
    "tsconfig.json"
  ]
}
