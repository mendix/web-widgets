{
  "name": "@mendix/shared-charts",
  "version": "1.1.1",
  "description": "Shared components for charts",
  "private": true,
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "start": "tsc --watch",
    "prepare": "npm run compile",
    "precompile": "rimraf ./dist",
    "compile": "tsc && copy-and-watch \"src/**/*.{scss,svg,js}\" \"dist/\"",
    "build:externals": "rollup --config rollup.config.js",
    "build": "ts-node ./scripts/build.ts",
    "release:externals": "rollup --config rollup.config.js --configProduction",
    "release": "ts-node ./scripts/release.ts",
    "lint": "eslint --config ../../../.eslintrc.js --ext .jsx,.js,.ts,.tsx src/",
    "test": "pluggable-widgets-tools test:unit:web"
  },
  "devDependencies": {
    "@mendix/pluggable-widgets-tools": "^9.20.0",
    "@testing-library/dom": "^8.19.1",
    "@testing-library/jest-dom": "^5.14.1",
    "@testing-library/react": "^12.0.0",
    "@testing-library/react-hooks": "^3.4.2",
    "@testing-library/user-event": "^13.2.1",
    "@types/plotly.js": "^2.12.8",
    "@types/react": "^17.0.52",
    "@types/react-dom": "^17.0.18",
    "@types/react-plotly.js": "^2.5.0",
    "@types/react-test-renderer": "<18.0.0",
    "@types/testing-library__jest-dom": "^5.14.5",
    "@types/testing-library__react-hooks": "^3.4.1",
    "ansi-colors": "^4.1.3",
    "copy-and-watch": "^0.1.6",
    "eslint": "^7.20.0",
    "mendix": "^9.21.59661",
    "react": "~17.0.2",
    "react-dom": "~17.0.2",
    "react-test-renderer": "~17.0.2",
    "rimraf": "^2.7.1",
    "rollup": "^2.68.0",
    "typescript": "4.5.4"
  },
  "dependencies": {
    "@mendix/pluggable-widgets-commons": "workspace:*",
    "ace-builds": "^1.4.13",
    "classnames": "^2.3.2",
    "fast-json-patch": "^3.1.1",
    "json-source-map": "^0.6.1",
    "plotly.js": "^2.14.0",
    "react-ace": "^9.4.4",
    "react-plotly.js": "^2.5.1"
  },
  "files": [
    "dist",
    "hooks",
    "rollup"
  ]
}
