{
  "name": "@mendix/shared-charts",
  "version": "1.1.2",
  "description": "Shared components for charts",
  "private": true,
  "copyright": "Â© Mendix Technology BV 2023. All rights reserved.",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "start": "tsc --watch",
    "prepare": "npm run compile",
    "precompile": "rimraf ./dist",
    "compile": "tsc && copy-and-watch \"src/**/*.{scss,svg,js}\" \"dist/\"",
    "build:externals": "rollup --config rollup.config.js",
    "build": "ts-node ./scripts/build.ts",
    "release:externals": "rollup --config rollup.config.js --configProduction",
    "release": "ts-node ./scripts/release.ts",
    "format": "prettier --write .",
    "lint": "eslint --ext .jsx,.js,.ts,.tsx . && tsc --noEmit",
    "test": "pluggable-widgets-tools test:unit:web"
  },
  "devDependencies": {
    "@mendix/eslint-config-web-widgets": "workspace:*",
    "@mendix/pluggable-test-utils": "workspace:*",
    "@mendix/pluggable-widgets-tools": "^9.24.1",
    "@mendix/prettier-config-web-widgets": "workspace:*",
    "@types/plotly.js": "^2.12.20",
    "@types/react-plotly.js": "^2.5.0",
    "@types/shelljs": "^0.8.11",
    "ansi-colors": "^4.1.3",
    "copy-and-watch": "^0.1.6",
    "mendix-client": "^7.15.8",
    "rimraf": "^2.7.1",
    "ts-node": "^10.9.1"
  },
  "dependencies": {
    "@mendix/pluggable-widgets-commons": "workspace:*",
    "ace-builds": "^1.23.4",
    "classnames": "^2.3.2",
    "deepmerge": "^4.3.1",
    "fast-json-patch": "^3.1.1",
    "json-source-map": "^0.6.1",
    "plotly.js": "^2.24.3",
    "react-ace": "^10.1.0",
    "react-plotly.js": "^2.6.0"
  },
  "files": [
    "dist",
    "hooks",
    "rollup"
  ]
}
