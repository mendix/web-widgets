{
    "extends": "@mendix/pluggable-widgets-tools/configs/tsconfig.base",
    "include": ["./src/**/*"],
    "ts-node": {
        "compilerOptions": {
            "module": "commonjs"
        }
    },
    "compilerOptions": {
        "baseUrl": "./",
        "rootDir": "./src",
        "outDir": "./dist",
        "types": ["mendix-client", "big.js", "jest", "node"],
        "noImplicitAny": true,
        "noImplicitReturns": true,
        "declaration": true,
        "sourceMap": false,
        "paths": { "*": ["node_modules/*", "node_modules/@types/*"] }
    }
}
