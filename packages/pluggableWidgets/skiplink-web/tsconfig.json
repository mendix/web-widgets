{
    "include": ["./src", "./typings"],
    "compilerOptions": {
        "baseUrl": "./",
        "noEmitOnError": true,
        "sourceMap": true,
        "module": "esnext",
        "target": "es6",
        "lib": ["esnext", "dom"],
        "types": ["jest", "node"],
        "moduleResolution": "node",
        "declaration": false,
        "noLib": false,
        "forceConsistentCasingInFileNames": true,
        "noFallthroughCasesInSwitch": true,
        "strict": true,
        "strictFunctionTypes": false,
        "skipLibCheck": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "jsx": "react-jsx",
        "outDir": "dist",
        "rootDir": "src"
    }
}
