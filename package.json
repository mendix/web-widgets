      "loader-utils@3": "^3.2.1",
      "decode-uri-component@<0.2.1": ">=0.2.1",
      "jest": "^29.4.1",
      "jest-environment-jsdom": "^29.4.1",
      "json5@1.x": ">=1.0.2",
      "json5@0.x": ">=1.0.2",
      "@mendix/pluggable-widgets-tools>typescript@4": "5.0.4",
